<%= render 'layouts/nav' %>
<!--  -->
<div class="sub_menu" style="border-bottom:4px solid #ddd5d5">
<div class="container">
  <div class="col-md-4">
    <%= link_to image_tag('album_index_back_hover.png', style: :'width:30px;'), posts_path %>
  </div>
  <div class="col-md-4 text-center">
    <%= image_tag "main_location.png", alt: :"icon" %>
  </div>
  <div class="col-md-4">
    <div class="pull-right">
      <% favorite = @post.find_my_favorite(current_user) %>
        <div id="favorite_block" style="display:inline; margin-right:20px;">
          <%= render :partial => "favorites/favorite", :locals => { :favorite => favorite } %>
        </div>
      <% if current_user && @post.user == current_user %>
        <div class="post_locker" style="display:inline;">
          <%= render :partial => "locker", :locals => { :post => @post } %>
        </div>
        <div class="post_trashcan" style="display:inline;">
          <%= render :partial => "trashcan", :locals => { :post => @post } %>
        </div>
      <% end %>    
    </div>
  </div>
  <div class="clearfix"></div>
  <div class="text-center">
    <%= @post.destination %>
  </div>
  </div>
  </div>
</div>

  <!--  -->
<div class="photo_area" style="background-color: #f2efef;">
  <br>
  <div class="container">
  <% unless @photos.empty? %>
    <%= image_tag @post.photos.first.pic.url, style: :'margin-bottom:15px;' %>
    <% @photos.each do |pic| %>
    <div class="span3" id="picture_<%= pic.id %>" style="display: inline-block;">

      <%= image_tag pic.pic.url(:medium) %>
        <p style="">
        <%= link_to "Edit picture", photo_path(pic) %>
        <%=
          link_to "Delete picture", pic,
            :data => { :confirm => "Are you sure?" },
            :method => :delete
          %>
        </p>
    </div>
    <% end %>
  <% end %>
  </div>
</div>

<br><br>
<div class="container">
  <div class="col-md-6">
    <%=image_tag current_user.image, :style=>"border-radius:3em; margin-right:20px"%>
    <div style="display:inline-block;vertical-align: middle;">
      <div style="font-size: 20px;">
        <div>
          <%= @post.title %>
        </div>
        <div style="color:gray;">
          <%= @post.user.name %>
        </div>
      </div>
    </div>
