    </div>

    <div class="field">
      <%= f.label :distance, '' %><br >
      <%= f.text_field :distance, :class =>"form-control" %>
    </div>
    <div class="field">
      <%= f.label :description, '' %><br >
      <%= f.text_area :description, :class =>"form-control" %>
    </div>
    <br>
