<% if @post.status == 'locked' %>
  <%= link_to image_tag("album_sub_lock.png",
   alt: :"sub_lock", style: :"margin-right:20px"),
    change_status_post_path(@post,:status => :'published'), :method => :post, remote: :true %>
<% else %>
  <%= link_to image_tag("album_sub_open.png",
   alt: :"sub_lock", style: :"margin-right:20px"), 
  change_status_post_path(@post, :status=> 'locked'), :method => :post, remote: :true %>
<% end %>