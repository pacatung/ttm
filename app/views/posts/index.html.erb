            <td><%= post.start_date %> <br><span>|</span><br><%= post.return_date %></td>
            <td> post.country </td>
            <td><%= post.destination %></td>
            <td><%= post.origin %></td>
            <td><%= post.distance %></td>
            <td>
              <%= image_tag 'album_sub_open.png', alt: :'sub_open' %>
              <%= image_tag "album_sub_love.png", alt: :"sub_love" %>
              <%= image_tag "album_sub_trash.png", alt: :"sub_trash" %>
            </td>
